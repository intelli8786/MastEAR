<UserControl x:Class="Mastear.Views.Page_Learner.Page_Learner_ModeToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mastear.Views.Page_Learner"
             mc:Ignorable="d">


    <Grid Width="600" Height="100">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Border Name="xml_Expert" Grid.Column="0" Background="Gray" CornerRadius="20,0,0,20">
            <TextBlock Foreground="White" FontSize="50" Text="전문가 모드" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        <Border Name="xml_Default" Grid.Column="1" Background="LightSkyBlue"  CornerRadius="0,20,20,0">
            <TextBlock Foreground="White" FontSize="50" Text="일반인 모드" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
